<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_galley_cover"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:src="@drawable/sample_gallery" />

    <LinearLayout
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_gallery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_26_dp"
            android:fontFamily="@font/gilroy_bold"
            android:textColor="@color/semi_black"
            android:textSize="@dimen/dimen_16_sp"
            tools:text="Utechia Gallery" />

        <TextView
            android:id="@+id/txt_gallery_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12_dp"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/dimen_16_dp"
            android:fontFamily="@font/gilroy_regular"
            android:maxLines="4"
            android:textColor="@color/semi_black"
            android:textSize="@dimen/dimen_12_sp"
            tools:text="@string/lorem_ipsum" />
    </LinearLayout>
</LinearLayout>